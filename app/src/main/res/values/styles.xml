<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi = "m">@color/colorWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi = "m">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/big</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginLeft">@dimen/med</item>
        <item name="android:layout_marginTop">@dimen/margin_big</item>
        <item name="android:layout_marginBottom">@dimen/margin_big</item>
    </style>
    <style name="TextInfo">
        <item name="android:textSize">@dimen/text_info</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorLightGray2</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginTop">@dimen/margin_big</item>
        <item name="android:layout_marginBottom">@dimen/med</item>
    </style>
    <style name="TextInfo2">
        <item name="android:textSize">@dimen/text_info</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">@dimen/margin_big</item>
        <item name="android:layout_marginBottom">@dimen/med</item>
    </style>
    <style name="ButtonStart">
        <item name="android:background">@drawable/button_start</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/margin_big2</item>
    </style>
    <style name="SeekBar">
        <item name="android:layout_marginStart">@dimen/margin_seekBar</item>
        <item name="android:layout_marginEnd">@dimen/margin_seekBar</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:max">50</item>
        <item name="android:progress">5</item>
    </style>
    <style name="SettingsText">
        <item name="android:paddingTop">@dimen/padding_settings</item>
        <item name="android:paddingBottom">@dimen/padding_settings</item>
        <item name="android:paddingStart">@dimen/padding_settings_end</item>
        <item name="android:paddingEnd">@dimen/padding_settings_end</item>
        <item name="android:textSize">@dimen/text_settings</item>
        <item name="android:drawableRight">@drawable/chevron_right</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@color/colorWhite</item>
    </style>
    <style name="SettingsText2">
        <item name="android:paddingTop">@dimen/padding_settings</item>
        <item name="android:paddingBottom">@dimen/padding_settings</item>
        <item name="android:paddingStart">@dimen/padding_settings_end</item>
        <item name="android:paddingEnd">@dimen/padding_settings_end</item>
        <item name="android:textSize">@dimen/text_settings</item>
        <item name="android:drawableRight">@drawable/chevron_right</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="SettingsText3">
        <item name="android:paddingTop">@dimen/padding_settings</item>
        <item name="android:paddingBottom">@dimen/padding_settings</item>
        <item name="android:paddingStart">@dimen/padding_settings_end</item>
        <item name="android:paddingEnd">@dimen/padding_settings_end</item>
        <item name="android:textSize">@dimen/text_settings</item>
        <item name="android:drawableRight">@drawable/chevron_right</item>
        <item name="android:textColor">@color/colorPink</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>


</resources>
